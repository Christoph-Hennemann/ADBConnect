<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_horizontal_margin_x2"
        android:layout_marginLeft="@dimen/default_horizontal_margin_x2"
        android:paddingTop="@dimen/default_horizontal_margin_x2"
        android:paddingBottom="@dimen/default_horizontal_margin_x2"
        android:paddingRight="@dimen/default_horizontal_margin"
        android:paddingLeft="@dimen/default_horizontal_margin"
        android:text="@string/purchase_dialog_disclaimer_message"/>

<ListView
    android:padding="@dimen/default_vertical_margin_x2"
    android:id="@+id/listview_purchase_items"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

</ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_horizontal_margin_x2"
        android:layout_marginLeft="@dimen/default_horizontal_margin_x2"
        android:paddingTop="@dimen/default_horizontal_margin_x2"
        android:paddingBottom="@dimen/default_horizontal_margin_x2"
        android:paddingRight="@dimen/default_horizontal_margin"
        android:paddingLeft="@dimen/default_horizontal_margin"
        android:text="@string/purchase_dialog_message"/>

</LinearLayout>
